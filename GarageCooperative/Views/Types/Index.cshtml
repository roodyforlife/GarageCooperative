@model IEnumerable<GarageCooperative.Models.Type>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<div class="form-group">
    <a class="btn btn-primary" asp-action="Request" asp-route-request="Select Types.Name, FloorNumber, (COUNT(Garages.GarageId) * (Types.Cost + Types.GarbadgeCost + Types.WaterCost)) as 'Money must be paid per month' from Types
left join Garages on Garages.TypeId = Types.TypeId
group by Types.Name, FloorNumber, Types.Cost, Types.GarbadgeCost, Types.WaterCost" asp-controller="Home">Запит на отримання типів гаражів, де буде виведено назву типу, кількість поверхів та кількість грошей, що буде виходити кожен місяць, зібравши оплату зі всіх гаражів</a>
</div>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Cost)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.GarbadgeCost)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.WaterCost)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FloorNumber)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Cost)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.GarbadgeCost)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.WaterCost)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FloorNumber)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.TypeId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.TypeId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.TypeId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
