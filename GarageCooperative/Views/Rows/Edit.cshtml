@model GarageCooperative.Models.Row

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Row</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="RowId" />
            <div class="form-group">
                <label asp-for="RowNumber" class="control-label"></label>
                <input asp-for="RowNumber" class="form-control" />
                <span asp-validation-for="RowNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MaxGarageCount" class="control-label"></label>
                <input asp-for="MaxGarageCount" class="form-control" />
                <span asp-validation-for="MaxGarageCount" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CooperativeId" class="control-label"></label>
                <select asp-for="CooperativeId" class="form-control" asp-items="ViewBag.CooperativeId"></select>
                <span asp-validation-for="CooperativeId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
